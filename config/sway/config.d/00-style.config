

set $default_font pango:DejaVu Sans Mono, FontAwesome

# https://ethanschoonover.com/solarized/#usage-development
# solarized colors
set $base03  #002b36
set $base02  #073642
set $base01  #586e75
set $base00  #657b83
set $base0   #839496
set $base1   #93a1a1
set $base2   #eee8d5
set $base3   #fdf6e3
set $yellow  #b58900
set $orange  #cb4b16
set $red     #dc322f
set $magenta #d33682
set $violet  #6c71c4
set $blue    #268bd2
set $cyan    #2aa198
set $green   #859900
set $trans   #00000000


# class                 border      background  text       indicator  child_border
client.focused          $base01     $base03    $base01   $blue      $base01
client.focused_inactive $base01     $base03    $base01   $base02    $base02
client.unfocused        $base02     $base03    $base0    $base02    $base02
client.urgent           $red        $red       $base0    $base02    $base02


# borders
set $border_size 1

# window settings
default_border pixel $border_size
font $default_font 9
gaps inner 5
gaps outer 0
smart_borders on
smart_gaps on
title_align center
titlebar_border_thickness $border_size
