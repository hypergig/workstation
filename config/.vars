# -*- bash -*-

# fail if any vars are missing
set -u

# default vars
export VISUAL=vim
export EDITOR="${VISUAL}"
_repos_dir="$HOME/repos"
_workstation_dir="${_repos_dir}/workstation"
_bash_profile_lib_dir="${_repos_dir}/workstation/lib"
_fav_containers=(alpine:latest ubuntu:latest debian:latest python:3 hypergig/parrotsay)


# brew can be in two differnt places depending on your hardware
_brew_prefix="$(PATH="/opt/homebrew/bin:/usr/local/bin:$PATH" brew --prefix)"


# path list
PATH_LIST=(
  ${_workstation_dir}/bin
  ${_brew_prefix}/bin
  ${_brew_prefix}/opt/coreutils/libexec/gnubin
  ${_brew_prefix}/opt/findutils/libexec/gnubin
  ${_brew_prefix}/opt/gnu-sed/libexec/gnubin
  ${_brew_prefix}/opt/make/libexec/gnubin
  ${_brew_prefix}/opt/gnu-tar/libexec/gnubin
  ${_brew_prefix}/opt/diffutils/libexec/gnubin
)

# python is such a freaking shit down, and brew only makes it worse
for p in $(which -a python3); do
  PATH_LIST+=( "$(${p} -m site --user-base)/bin" )
done

# set path
PATH="$( IFS=':'; echo "${PATH_LIST[*]}" ):$PATH"


# gcloud acting super weird right now
if [ -f '/Users/jordancohen/Downloads/google-cloud-sdk/path.bash.inc' ]; then . '/Users/jordancohen/Downloads/google-cloud-sdk/path.bash.inc'; fi


# turn back off
set +u
