#!/usr/bin/env sh

echo "$(date) - starting load"

# global settings
yabai -m config \
    auto_balance on \
    split_ratio .5 \
    window_placement second_child \
    layout bsp \
    window_gap 10

yabai -m rule --add app='System Settings' manage=off
yabai -m rule --apply 0

echo "$(date) - yabai configuration loaded.."
