#! /usr/bin/env bash

# i3 workspace plugin crash fix
# https://github.com/denesb/xfce4-i3-workspaces-plugin/issues/60
killall /usr/lib/x86_64-linux-gnu/xfce4/panel/wrapper-1.0


# reset the panel as it doesn't handle scaling changes well
pidof xfce4-panel && xfce4-panel -r


# gnome flashback bug
# https://github.com/regolith-linux/regolith-desktop/issues/289
xrandr -s 1
xrandr -s 0


# fix desktop background
gsettings set org.gnome.desktop.background picture-options scaled
gsettings set org.gnome.desktop.background picture-options zoom
